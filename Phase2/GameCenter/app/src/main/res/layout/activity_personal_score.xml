<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group0642.csc207.fall18.gamecenter.PersonalScoreActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/slidingtiles"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:text="@string/sliding_tiles_2"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/blackjack"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:text="@string/blackjack"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/hangman"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:text="@string/hangman"
            android:textAllCaps="false" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>