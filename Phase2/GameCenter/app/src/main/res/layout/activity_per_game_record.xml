<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group0642.csc207.fall18.gamecenter.PerGameRecord">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/title_of_a_scorboard"
            android:textAlignment="center"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/prev10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="@string/previous_10"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/next10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/next_10"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <TextView
            android:id="@+id/first_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/second_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/third_3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fourth_4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/five_5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/six_6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/seventh_7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/eight_8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nine_9"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ten_10"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>